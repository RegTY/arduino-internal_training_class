#include <stdio.h>

int main()
{
    int answer;
    int userAnswer;
    printf("Enter a number:");
    scanf("%i", &answer );
    
    printf("Guess my number:");
    scanf("%i", &userAnswer);
    
    while (userAnswer != answer){
        int difference = userAnswer - answer;
        // if (userAnswer > answer && 0 < difference <= 10){
        //     printf("Your answer is very close! Try again!:");
        //     scanf("%i", &userAnswer);
        // }
        //  else if (userAnswer == 1337){
        //     printf("Your answer is very close! Try again!");
        //     scanf("%i", &userAnswer);
        //  }
        // else if userAnswer < answer and -10 <= difference < 0:
        //     userAnswer = int(input("The number is higher, you are very close! Try again! "))
        if (userAnswer < answer){
            printf("The number is higher! Try again! :");
            scanf("%i", &userAnswer);
        }
        else if (userAnswer > answer){
            printf("The number is lower, Try again!:");
            scanf("%i", &userAnswer);
        }
    }
    if (userAnswer == answer){
    printf("You guessed the correct number!");
    }
}
